<% content_for :customjs do %>
  <script type="text/javascript">
  // Initialize the colorPicker for this page
    $("#colorPicker").spectrum({
      color: "#f00"
    });
  // Custom painting library
    var colorPicked;
    var trigger = false;
    function getColor() {
      colorPicked = $("#colorPicker").spectrum("get");
      return colorPicked.toHexString();
    }
    $(".cell").on({
      mouseover: function () {
        if(trigger) {
          $(this).attr("style", "background-color:" + getColor());
        }
      },
      mouseleave: function () {
        if(trigger) {
          $(this).attr("style", "background-color:" + getColor());
          var pixel = {
            color: getColor(),
            x: $(this).attr("data-x"),
            y: $(this).attr("data-y")
          }
          $.ajax({
            type: "POST",
            url: '/drawer/store',
            data: pixel,
            success: function () {
            },
            dataType: "json"
          });
        }
      },
      click: function () {
        trigger = !trigger;
      }
    });
  </script>
<% end %>
<div id="header">
  <%= image_tag "paintcraft.png" %>
</div>
<div id="content">
  <p>Please select your color on the left and set it to paint the squares<p>
  <input type="text" id="colorPicker"/>
  <table id="drawTable">
      <% (0..16).each do |x|%>
        <tr>
          <% (0..16).each do |y| %>
            <td class="cell" data-x="<%= x %>" data-y="<%= y %>" style="background-color:#<%= @pixels[x,y] %>;"></td>
          <% end %>
        </tr>
      <% end %>
  </table>
  <button class="btn"> Export to Minecraft! </button>
</div>
